{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "es6",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "preserve",
		"moduleResolution": "node",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"useDefineForClassFields": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": [
			"webpack-env"
		],
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		]
	},
	"include": [
		"src/**/*",
		"tests/**/*.ts",
	],
	"exclude": [
		"node_modules"
	]
}